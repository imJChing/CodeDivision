source 'https://rubygems.org'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-flash'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'shotgun'

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'byebug'
end

group :test do
  gem 'faker'
  gem 'rspec'
end
