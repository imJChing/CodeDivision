source 'https://rubygems.org'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib' # for reloader
gem 'sinatra-flash' # for flash
gem 'sinatra_more' # for helper methods

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'shotgun'
gem 'bcrypt'

group :development do
  gem 'byebug'
end

group :test do
  gem 'faker'
  gem 'rspec'
end
