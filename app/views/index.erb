<form class="form-horizontal" action="/urls" method="post">
  <div class="form-group">
    <label class="col-sm-2 control-label">Url to shorten</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="form[redirect_url]" placeholder="Enter your url here">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <button type="submit" class="btn btn-info">Generate Short URL</button>
    </div>
  </div>
</form>
<% if !session[:flash_message].nil? %>
  <div class="alert alert-<%= session[:flash_type] %>" role="alert"><%= session[:flash_message] %></div>
<% session.clear; end %>
<table class="table table-bordered">
  <tr>
    <td>Url</td>
    <td>Short url</td>
  </tr>
  <% if @urls.empty? %>
    <tr><td>No urls to display!</td><td></td></tr>
  <% end %>
  <% @urls.each do |x| %>
    <tr>
      <td><a href="<%= x.redirect_url %>"><%= x.redirect_url %></a></td>
      <td><a href="/<%= x.short_uri %>">/<%= x.short_uri %></a></td>
    </tr>
  <% end %>
</table>