<h1>Login</h1>
<%= partial :'shared/form_errors' %>
<% form_for @user, '/login', class: 'form-horizontal' do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label", caption: "Email:" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label", caption: "Password:" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Login", class: "btn btn-info" %>
      <a class="btn btn-warning" href="/users/new">Register</a>
    </div>
  </div>
<% end %>
